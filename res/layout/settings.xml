<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    >
  <TextView
    android:id="@+id/plasmaTypeLabel"
	    android:layout_width="150px"
	    android:layout_height="wrap_content"
      android:layout_alignParentLeft="true"
      android:text="Type:"
	    />
  <Spinner
    android:id="@+id/plasmaTypeSpinner"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_toRightOf="@id/plasmaTypeLabel"
    android:layout_alignTop="@id/plasmaTypeLabel"
		/>
  <TextView
    android:id="@+id/roughnessLabel"
    android:layout_width="150px"
    android:layout_height="wrap_content"
    android:text="Roughness:"
    android:layout_alignParentLeft="true"
    android:layout_below="@id/plasmaTypeSpinner"
    />
  <EditText
    android:id="@+id/roughnessText"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentRight="true"
    android:inputType="number"
    android:layout_toRightOf="@id/roughnessLabel"
    android:layout_alignTop="@id/roughnessLabel"
    />
  <Button android:text="Save"
    android:id="@+id/saveButton"
    android:layout_width="wrap_content"
    android:padding="5dp"
    android:textSize="14dp"
    android:layout_height="wrap_content"
    android:layout_below="@id/roughnessText"
    android:layout_alignParentRight="true">
  </Button>
  <Button android:text="Cancel"
     android:id="@+id/cancelButton"
     android:layout_width="wrap_content"
    android:padding="5dp"
     android:textSize="14dp"
     android:layout_height="wrap_content"
    android:layout_toLeftOf="@id/saveButton"
    android:layout_alignTop="@id/saveButton">
  </Button>
</RelativeLayout>
